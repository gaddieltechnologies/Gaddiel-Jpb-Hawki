<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bad7f2" >
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/jindal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#bad7f2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/custname"
                android:visibility="gone"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingLeft="3dp"
				android:layout_margin="2dp"
                android:ems="10"
                android:hint="@string/custname"
                android:background="@drawable/edittext_background_rounded"
                android:text="" >              
            </AutoCompleteTextView>

           
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:background="#bad7f2">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/purpose"
                 android:visibility="gone"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingLeft="3dp"
				android:layout_margin="2dp"
                android:ems="10"
                android:hint="@string/purpose"
                android:background="@drawable/edittext_background_rounded"
                android:text="" >               
            </AutoCompleteTextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:background="#bad7f2">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activities"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ListView
                android:id="@+id/listView1"
                android:layout_width="match_parent"
                android:layout_height="198dp" >

            </ListView>

        </LinearLayout>
    </LinearLayout>

    
	
			<ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="315dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/button1"
            android:layout_marginTop="16dp" 
            android:visibility="gone">
			</ListView>
			
			<EditText
			    android:id="@+id/editTextAmount"
			    android:layout_width="match_parent"
			    android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingLeft="3dp"
				android:layout_margin="2dp"
			    android:ems="10"
			    android:inputType="number"
			    android:background="@drawable/edittext_background_rounded"
			    android:hint="@string/travelamt"/>
			
			<CheckBox
			    android:id="@+id/followcheckBox"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:text="@string/followup" />		  
			 		

			<EditText
			    android:id="@+id/editTextcomment"
			    android:layout_width="match_parent"
			    android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingLeft="3dp"
				android:layout_margin="2dp"
			    android:ems="10"
			    android:inputType="textMultiLine" 
			    android:background="@drawable/edittext_background_rounded"			    
			    android:hint="@string/comment" />

			
			
			
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        
        <Button
            android:id="@+id/button2"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.38"
             android:background="@drawable/green"
            android:text="@string/exit" />

        <Button
            android:id="@+id/button3"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.38"
             android:background="@drawable/green"
            android:text="@string/reset" />
      
        <Button
            android:id="@+id/button1"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.38"
            android:background="@drawable/green"
            android:text="@string/buttonsubmit" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/weblink" />

</LinearLayout>
</ScrollView>
